<Window x:Class="GM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:GM.ViewModel"
        xmlns:local="clr-namespace:GM"
        mc:Ignorable="d"
        Title="GMHelper" Height="600" Width="1100">
    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ListView x:Name="TeamList" 
                  ItemsSource="{Binding Teams}" 
                  DisplayMemberPath="TeamName" 
                  Grid.Column="0" 
                  SelectedIndex="0"/>
        <DataGrid ItemsSource="{Binding ElementName=TeamList, Path=SelectedValue.Players}" 
                  Grid.Column="1"/>
    </Grid>
</Window>
